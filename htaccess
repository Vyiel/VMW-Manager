ErrorDocument 403 "/vmops/404.html"
ErrorDocument 500 "/vmops/404.html"

RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

RewriteRule ^([^\.]+)$ $1.html [NC,L]

